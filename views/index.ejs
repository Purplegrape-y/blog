<%- include('./common/header.ejs')%>
  <div class="container">
    <h1>文章列表</h1>
    <div class="list-group">
      <% articles.forEach(item => { %>
      <a href="/article/info/<%= item.id%>" class="list-group-item">
        <%= item.title%>
        <span class="badge" style="background-color: #f0ad4e">发表时间:<%= item.ctime%></span>
        <span class="badge" style="background-color: #5cb85c">作者:<%= item.nickname %></span> 
      </a>
      <% })%>
    </div>

    <!-- 分页 -->
    <nav aria-label="Page navigation">
      <ul class="pagination">
        <li class="<%= currentPage -1<1?'disabled':'' %>">
          <a href="<% if(currentPage -1<1){%> javascript:;<%}else%>/?page=<%= currentPage-1%>" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
          </a>
        </li>
        
        <% for(var i = 1;i <= totalPage;i++) {%> 
        <li class="<%= currentPage == i ? 'active' : '' %>">
          <a href="/?page=<%= i %>"><%= i%></a>
        </li>
        <% } %>
        <li  class="<%= currentPage +1>totalPage?'disabled':'' %>">
          <a href="<% if(currentPage +1>totalPage){%> javascript:;<%}else%>/?page=<%= currentPage+1%>" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
          </a>
        </li>
      </ul>
    </nav>
  </div>
  

<%- include('./common/footer.ejs')%>
